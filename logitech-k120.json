{
  "title": "Logitech K120",
  "rules": [

    { "description": "App Switcher", "manipulators": [

      {"type": "basic",
          "from": {"key_code": "tab","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "tab","modifiers": ["left_command"]}]},
      {"type": "basic",
          "from": {"key_code": "tab","modifiers": {"mandatory": ["left_command"]}},
          "to": []},

      {"type": "basic",
          "from": {"key_code": "left_arrow","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "left_arrow","modifiers": ["left_command"]}]},
      {"type": "basic",
          "from": {"key_code": "left_arrow","modifiers": {"mandatory": ["left_command"]}},
          "to": []},
      {"type": "basic",
          "from": {"key_code": "right_arrow","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "right_arrow","modifiers": ["left_command"]}]},
      {"type": "basic",
          "from": {"key_code": "right_arrow","modifiers": {"mandatory": ["left_command"]}},
          "to": []}

    ]},

    { "description": "Clipboard", "manipulators": [
      {"type": "basic",
          "from": {"key_code": "x","modifiers": {"mandatory": ["left_control"]}},
          "to": [{"key_code": "x","modifiers": ["left_command"]}]},
      {"type": "basic",
          "from": {"key_code": "x","modifiers": {"mandatory": ["left_command"]}},
          "to": []},
      {"type": "basic",
          "from": {"key_code": "c","modifiers": {"mandatory": ["left_control"]}},
          "to": [{"key_code": "c","modifiers": ["left_command"]}]},
      {"type": "basic",
          "from": {"key_code": "c","modifiers": {"mandatory": ["left_command"]}},
          "to": []},
      {"type": "basic",
          "from": {"key_code": "v","modifiers": {"mandatory": ["left_control"]}},
          "to": [{"key_code": "v","modifiers": ["left_command"]}]},
      {"type": "basic",
          "from": {"key_code": "v","modifiers": {"mandatory": ["left_command"]}},
          "to": []}
    ]},

  { "description": "Symbols", "manipulators": [

      {"description": "@", "type": "basic",
          "from": {"key_code": "v","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "2","modifiers": ["left_shift","left_option"]}]},
      {"type": "basic",
          "from": {"key_code": "2","modifiers": {"mandatory": ["left_shift","left_option"]}},
          "to": []},

      {"description": "[", "type": "basic",
          "from": {"key_code": "f","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "open_bracket","modifiers": ["left_option"]}]},
      {"type": "basic",
          "from": {"key_code": "open_bracket","modifiers": {"mandatory": ["left_option"]}},
          "to": []},

      {"description": "]", "type": "basic",
          "from": {"key_code": "g","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "close_bracket","modifiers": ["left_option"]}]},
      {"type": "basic",
          "from": {"key_code": "close_bracket","modifiers": {"mandatory": ["left_option"]}},
          "to": []},

      {"description": "{", "type": "basic",
          "from": {"key_code": "b","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "open_bracket","modifiers": ["left_shift","left_option"]}]},
      {"type": "basic",
          "from": {"key_code": "open_bracket","modifiers": {"mandatory": ["left_shift","left_option"]}},
          "to": []},

      {"description": "}", "type": "basic",
          "from": {"key_code": "n","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "close_bracket","modifiers": ["left_shift","left_option"]}]},
      {"type": "basic",
          "from": {"key_code": "close_bracket","modifiers": {"mandatory": ["left_shift","left_option"]}},
          "to": []},

      {"description": "|", "type": "basic",
          "from": {"key_code": "w","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "backslash","modifiers": ["left_shift","left_option"]}]},
      {"type": "basic",
          "from": {"key_code": "backslash","modifiers": {"mandatory": ["left_shift","left_option"]}},
          "to": []},

      {"description": "~", "type": "basic",
          "from": {"key_code": "1","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "n","modifiers": ["left_option"]}]},

      {"description": "`", "type": "basic",
          "from": {"key_code": "7","modifiers": {"mandatory": ["left_option"]}},
          "to": [{"key_code": "non_us_backslash","modifiers": ["left_option"]}]},

      {"description": "<", "type": "basic",
        "from": {"key_code": "comma","modifiers": {"mandatory": ["right_option"]}},
        "to": [{"key_code": "non_us_backslash","modifiers": []}]},
      {"description": ">", "type": "basic",
        "from": {"key_code": "period","modifiers": {"mandatory": ["right_option"]}},
        "to": [{"key_code": "non_us_backslash","modifiers": ["left_shift"]}]},

      {"description": "hyphen1", "type": "basic",
          "from": {"key_code": "7","modifiers": {"mandatory": ["left_shift"]}},
          "to": [{"key_code": "hyphen","modifiers": []}]},
      {"description": "hyphen2", "type": "basic",
          "from": {"key_code": "7","modifiers": {"mandatory": ["right_shift"]}},
          "to": [{"key_code": "hyphen","modifiers": []}]},

      {"description": "slash", "type": "basic",
          "from": {"key_code": "hyphen","modifiers": {"mandatory": []}},
          "to": [{"key_code": "7","modifiers": ["left_shift"]}]}
    ]},

    { "description": "Caret & Selection", "manipulators": [

      {"description": "Home", "type": "basic",
        "from": {"key_code": "home","modifiers": {"mandatory": []}},
        "to": [{"key_code": "left_arrow","modifiers": ["left_command"]}]},
      {"type": "basic",
        "from": {"key_code": "left_arrow","modifiers": {"mandatory": ["left_command"]}},
        "to": []},

      {"description": "End", "type": "basic",
        "from": {"key_code": "end","modifiers": {"mandatory": []}},
        "to": [{"key_code": "right_arrow","modifiers": ["left_command"]}]},
      {"type": "basic",
        "from": {"key_code": "right_arrow","modifiers": {"mandatory": ["left_command"]}},
        "to": []},

      {"description": "Select All", "type": "basic",
        "from": {"key_code": "a","modifiers": {"mandatory": ["left_control"]}},
        "to": [{"key_code": "a","modifiers": ["left_command"]}]},
      {"type": "basic",
        "from": {"key_code": "a","modifiers": {"mandatory": ["left_command"]}},
        "to": []}
    ]},

    { "description": "Ctrl+C -> Cmd+C (if you use the Clipboard rule and want to kill terminal processes)", "manipulators": [
      {"type": "basic",
        "from": {"key_code": "c","modifiers": {"mandatory": ["left_command"]}},
        "to": [{"key_code": "c","modifiers": ["left_control"]}]}
      ]}
  ]
}
